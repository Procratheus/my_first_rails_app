<div class="row">
  <div class="col-md-8">
    <div class="media">
    <%= link_to "#", class: "pull-left" do %>
      <%= image_tag(comment.user.avatar.small.url if comment.user.avatar?) %>
    <% end %>
    <% if @comment != nil %>
     <% @comment.each do |comment| %>
      <div class="media-body">
        <small>
        </small>
        <p><%= comment.body %></p>         
      </div>
     <% end %>
    <% end %>
    </div>   
  </div>
</div>







  
