
<%= simple_form_for [topic, post], defaults: { wrapper_html: { class: 'form-group' } } do |f| %>
    <%= f.input :title, input_html: { class: 'form-control' }, placeholder: "Enter Post title" %>
    <%= f.input :body, input_html: { class: 'form-control', rows: 8 }, placeholder: "Enter Post body" %>   
    <%= f.button :submit, "Create Post", class: 'btn btn-success' %>
<% end %>
